<html>
    <head>
       {{>header}}
    </head>
    <body class ="container-fluid" style="background-color:#76A5AF; margin-top:50px;">
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
      
        <div class="container" style="background-color: darkgray; padding: auto;">
            <div class="row">
                <div class="col-md-12">
                    <div class="row" style="padding: 5px; background-color: aqua; border-radius: 5%;">
                        <div class="col-md-12">
                            <h2>
                                {{title}}
                            </h2>
                            <p>
                                <h3>Hello {{user}} </h3>
                                {{^goals}}
                                
                                No goals yet.

                                Please add some goals
                                {{/goals}}
                            </p>
                            <p>
                                
                            </p>
                        </div>
                    </div>
                    <div class="row" style="padding: 5px; background-color: blueviolet;">
                        <div class="col-md-6 ps-xxl-0" style="padding: 5px;">
                            <div class="card bg-success shadow-lg" style="min-height: 7rem; min-width: 25rem; max-width: 25rem; border-radius:5%">
                                <h5 class="card-header text-center shadow-sm text-capitalize">
                                    Complete Goals
                                </h5>
                                <div class="card-body" style="min-height: max-content;" >
                                    <h1 class="card-title text-center">5</h1>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="btn-group btn-group-lg shadow-lg">
                                     <a href="completedgoals" class="btn btn-rounded float-left btn-outline-dark">View All</a>
                                     <a href="/new" class="btn btn-rounded float-right btn-outline-dark">Add New</a>
                                 </div></div>
                            </div>
                        </div>
                        <div class="col-md-6 pe-xxl-0" style="padding: 5px;">
                            <div class="card bg-warning shadow-lg" style="min-height: 7rem; min-width: 25rem; max-width: 25rem; border-radius:5%">
                                <h5 class="card-header text-center shadow-sm text-capitalize">
                                    Incomplete Goals
                                </h5>
                                <div class="card-body" style="min-height: max-content;" >
                                    <h1 class="card-title text-center">5</h1>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="btn-group btn-group-lg shadow-lg">
                                     <a href="incompletegoals" class="btn btn-rounded float-left btn-outline-dark">View All</a>
                                     <a href="/new" class="btn btn-rounded float-right btn-outline-dark">Add New</a>
                                 </div></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <div class ="justify-content-center card-group gap-3">
                        {{#goals}}        
                            <div class="card bg-{{colour}} shadow-lg" style="min-height: 7rem; min-width: 25rem; max-width: 25rem; border-radius:5%">
                                <div class="card-header text-center shadow-sm text-capitalize">
                                    <h2 class="text-lg">{{exercise}}</h2>
                               {{^achieved}}
                                    <div class="card-subtitle text-sm text-capitalize">
                                    To be completed by {{endDate}}
                                </div>
                                {{/achieved}}
                                {{#achieved}}
                                    <div class="card-subtitle text-sm text-capitalize">
                                    Completed
                                </div>
                                {{/achieved}}
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item text-white text-capitalize bg-dark">{{details}}</li>
                            </ul>
                            <div class="card-footer text-center">
                               <p>Set by <a href="/posts/{{user}}">{{user}}</a> on {{started}}</p>
                               <div class="btn-group btn-group-lg shadow-lg">
                                   {{^achieved}}
                                <a href="/edit/{{_id}}" class="btn btn-rounded float-left btn-outline-dark">Edit</a>
                                <a href="/share/{{_id}}" class="btn btn-rounded btn-outline-dark">Share</a>
                                <a href="/delete/{{_id}}" class="btn btn-rounded btn-outline-dark">Delete</a>
                                <a href="/completegoal/{{_id}}" class="btn btn-rounded float-right btn-outline-dark">Complete</a>
                                 {{/achieved}}
                                 {{#achieved}}
                                    <a href="/share/{{_id}}" class="btn btn-rounded btn-outline-dark">Share</a>
                                 {{/achieved}}
                            </div></div>
                    </div>
                
                        <hr>
                        {{/goals}}</div> 

                </div>
            </div>
        
        </div>

   
                                   
      
        



        <script src="" async defer></script>
    </body>
    
</html>