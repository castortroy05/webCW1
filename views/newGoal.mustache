            <div class="container bg-dark border-dark text-white shadow-lg" style="padding: auto; border-radius: 10px ;">
                <div class="row-cols-auto gy-5">
                    <div class="col-12 p3">
                        <form method="post"role="form" class="row g-2" align="center">
            
                            <div class="row mb-3 mx-auto">
                                <label for="exercise" class="col-sm-2 col-form-label">Exercise</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control col-md-1" name="exercise" id="exercise" placeholder="Exercise name " required>
                                </div>
                            </div>
                
                            <div class="row mb-3 mx-auto">
                                <label for="endDate" class="col-2 col-form-label">Date</label>
                                <div class="col-sm-10">
                                  <input class="form-control" type="date" value="" name ="endDate" id="endDate" required>
                                </div>
                              </div>
                
                            <div class="row mb-3 mx-auto">
                                <label for="details" class="col-2 col-form-label">Details</label>
                                <div class="col-sm-10">
                                <textarea class="form-control" style="height: 70px;" id="details" name="details" placeholder="Details of exercise " required></textarea></div>
                            </div>
                
                            <div class="form-group" style="padding: 10px;">
                                <input type="submit" value="Add Goal" class="btn btn-rounded btn-outline-primary shadow"">
                            </div>
                      
                        </form>
                

                    </div>
                </div>
            

            </div>

    
    </body>
